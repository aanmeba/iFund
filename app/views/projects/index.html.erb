<h1 class="text-center mt-5">Discover Projects</h1>
<section class="container mt-5">
  <div class="container-sm">
    <ul class="nav">
      <li class="nav-item"><%= link_to "ending soon", sort: "ending soon" %></li>
      <li class="nav-item"><%= link_to "need your support", sort: "need your support" %></li>
    </ul>
  </div>
  <div class="row row-cols-sm-1 row-cols-md-2 row-cols-lg-4">
    <% @projects.each do |project| %>
      <div class="col mb-4">
        <div class="card border-dark h-100">
          <%= render "picture", temp: project %>
          
          <div class="card-body">
            <h5><%= format_text(project.title) %></h5>

            <%= render "badges", temp: project %>
            <%= render "progress", temp: project %>

            <div class="d-flex justify-content-between mt-3">
              <%= link_to "See More", project_path(project.id), class: "btn btn-outline-primary"%>
              <h5>D-<%= ((project.due_date) - (project.start_date)).to_i %></h5>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>