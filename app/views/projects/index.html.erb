<h1 class="text-center">Discover Projects</h1>
<section class="container">
  <div class="row row-cols-sm-1 row-cols-md-2 row-cols-lg-4">
    <% @projects.each do |project| %>
      <div class="col mb-4">
        <div class="card border-dark h-100">
          <%= render "picture", temp: project %>
          <div class="card-body">
            <h5><%= project.title %></h5>
            <p class="badge badge-pill badge-info"><%= @categories.find(project.category_id).name %></p>

            <% if project.start_date <= Date.current && project.due_date > Date.current %>
              <p class="badge badge-pill badge-primary"><%= @statuses[0] %></p>
            <% elsif project.start_date > Date.current && project.due_date > Date.current %>
              <p class="badge badge-pill badge-primary"><%= @statuses[1] %></p>
            <% else %>
              <p class="badge badge-pill badge-primary"><%= @statuses[2] %></p>
            <% end %>

            <div class="d-flex justify-content-between">
              <%= link_to "See More", project_path(project.id), class: "btn btn-outline-primary"%>
              <h5>D-<%= ((project.due_date) - (project.start_date)).to_i %></h5>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>