<h1 class="text-center">Discover Projects</h1>
<section class="container">
  <div class="row row-cols-sm-1 row-cols-md-2 row-cols-lg-4">
    <% @projects.each do |project| %>
      <div class="col mb-4">
        <div class="card border-dark h-100">
          <%= render "picture", temp: project %>
          <div class="card-body">
            <h5><%= project.title %></h5>
            
            <div class="d-flex justify-content-between">
              <%= link_to "See More", project_path(project.id), class: "btn btn-outline-primary"%>
              <% if !project.goal_amount %>
                <h5>$0</h5>
              <% else %>
                <h5><%= project.goal_amount %></h5>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>