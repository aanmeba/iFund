<% if proj_progress(temp.total_amount, temp.goal_amount) == 0 %>
  <div class="progress">
    <div class="progress-bar text-muted" role="progressbar" style="width: 100%; background-color: #e9ecef;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="0"></div>
  </div>
  <div class="align-box">
    <p class="text-primary"><%= "0%" %></p>
    <p class="text-muted"><%= days_to_go(temp.due_date, temp.start_date) %> <%= "day".pluralize(@day_left) %> to go</p>
  </div>  
<% else %>
  <div class="progress">
    <div class="progress-bar" role="progressbar" style="width: <%= @result %>%" aria-valuenow="<%= @result %>" aria-valuemin="0" aria-valuemax="100"></div>
  </div>
  <div class="align-box">
    <p class="text-primary"><%= "#{@result.round}%" %></p>
    <p class="text-muted"><%= days_to_go(temp.due_date, temp.start_date) %> <%= "day".pluralize(@day_left) %> to go</p>
  </div>
<% end %>