<h3>Just Options</h3>
<%= form_with model: @option, local: true do |f| %>
  <h5>Option <%= @option.id %></h5>
  <div class="field">
    <%= f.label :title, class: "col-sm-2 col-form-label" %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :amount, class: "col-sm-2 col-form-label" %>
    <%= f.text_field :amount %>
  </div>
  <div class="field">
    <%= f.label :description, class: "col-sm-2 col-form-label" %>
    <%= f.text_area :description %>
  </div>
<% end %>
    