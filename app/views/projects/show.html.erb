<section class="container mt-5">

  <%# user authorisation %>
  <% if user_signed_in? && current_user.id == @project.user_id %>
    <div class="links">
      <%= link_to "Edit", edit_project_path(@project.id) %>
      <%= link_to "Delete", destroy_project_path(@project.id), method: :delete, data: {confirm: "Are you sure?"} %>
    </div>
  <% end %>

  <div class="row">
    <div class="col mt-3">
      <h2 class="text-center"><%= format_text(@project.title) %></h2>
    </div>
  </div>

  <div class="row" id="show-main-container">
    <%# photo section %>
    <div class="col mt-5">
      <%= render "picture", temp: @project %>
    </div>

    <%# project overview section %>
    <div class="col mt-5">
      <%= render "badges", temp: @project %>
      <%= render "progress", temp: @project %>

      <h3 class="font-weight-bold mt-3"><%= format_currency(@project.total_amount) %> </h3>
      <p>raised of <%= format_currency(@project.goal_amount) %> goal</p>
      <h3><%= @total_supporters %></h3><p><%= "supporter".pluralize(@total_supporters) %></p>

      <%# logic for payment button %>
      <% if !user_signed_in? %>
        <%= button_to "Login to Support", new_user_session_path, class: "btn btn-info" %>
      <% elsif !@project.status && @project.start_date > Date.current %>
        <div class="alert alert-info">This project will open in <%= days_to_go(@project.start_date) %> <%= "day".pluralize(@day_left) %></div>
      <% elsif !@project.status && @project.due_date <= Date.current %>
        <div class="alert alert-secondary">This project was closed</div>
      
      <% else %>
        <div>
          <%= form_with url: support_session_path(id: @project.id) do |f| %>
            <%# input field for custom amount %>
            <div class="field">
              <%= f.label :price, "Customise your pledge in cents:", class: "col-form-label" %>
              <%= f.label :price, "*Last two digits are cents and they will be rounded", class: "text-muted small" %>

              <div class="field input-group-sm mb-3 pledge-input">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="inputGroup-sizing-sm">$</span>
                </div>
                <%= f.text_field :price %>
              </div>
            </div>

            <%# radio buttons generated by adding options %>
            <% @option.each do |option| %>
              <div class="field">
                <%= f.radio_button :price, option.amount, class: "mr-2" %>
                <%= f.label :price, "#{format_text(option.title)} - #{format_currency(option.amount)}", class: "form-label mr-1" %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.button "Support", class: "btn btn-primary", data: {disable_with: "Loading..."} %>

              <%# display a refresh button if there's any option %>
              <% if @option.present? %>
                <%= link_to "Uncheck the option", project_path(@project.id), class: "ml-3" %>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="w-100"></div>
    
    <%# description section %>
    <div class="col mt-5">
      <div class="description">
        <h3>Description</h3>
      </div>
      <hr class="divider-class">

      <%# separate paragraph %>
      <p><%= safe_join(@project.description.capitalize.split("\r\n"), tag(:br)) %></p>
    </div>

    <%# option section %>
    <div class="col mt-5">
      <%= render "options/show" %>
    </div>
    
  </div>
</section>