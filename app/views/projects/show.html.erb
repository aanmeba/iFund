<section class="container">
  <% if user_signed_in? && current_user.id == @project.user_id %>
    <div class="links" style="display: flex; justify-content: flex-end;">
      <%= link_to "Edit", edit_project_path(@project.id), class: "mr-3" %>
      <%= link_to "Delete", destroy_project_path(@project.id), method: :delete, data: {confirm: "Are you sure?"}, class: "mr-3" %>
    </div>
  <% end %>
  <div class="row">
    <div class="col mt-5">
      <%= render "picture", temp: @project %>
    </div>
    <div class="col mt-5">
      <h1><%= @project.title %></h1>
      <h3>Goal: <%= @project.goal_amount %></h3>
      <p class="badge badge-pill badge-info"><%= @categories.find(@project.category_id).name %></p>
      <p>Start Date: <%= @project.start_date %></p>
      <p>Due Date: <%= @project.due_date %></p>
      <p>D-<%= ((@project.due_date) - (@project.start_date)).to_i %></p>
    </div>
    <div class="w-100"></div>
    
    <div class="col mt-5">
      <p><%= @project.description%></p>
    </div>

    <div class="col mt-5">
      <h3>Options</h3>
      <% @option.each do |option| %>
        <ul><%= option.title %>
          <li><%= option.amount %></li>
          <li><%= option.description %></li>
        </ul>
      <% end %>
    </div>
  </div>
</section>